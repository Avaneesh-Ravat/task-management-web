<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home page</title>
    <link rel="stylesheet" href="/home.css">
</head>
<body>
    <div class="container">
        
        <div class="nav">
            <div class="user-name"><h2>User:<br><%= name %></h2></div>
            <div class="btn current-choice"><h2>My tasks</h2></div>
        </div>
        <div class="task-container">
            <div class="selected-task">
                <div class="task-heading">
                    <h2>Due Today</h2>
                </div>
                <div class="task-table">
                    <div class="tr">
                        <div class="th-task th"><h3>Tasks</h3></div>
                        <div class="th-priority th"><h3>Priority</h3></div>
                        <div class="th-status th"><h3>Status</h3></div>
                    </div>
                    <% for(task of high_tasks){ %>
                        <div class="tr">
                            <div class="th-task td high-task"><p><%= task.task %></p></div>
                            <div class="th-priority td high-task"><p><%= task.priority %></p></div>
                            <div class="th-status td high-task"><p><%= task.status %></p></div>
                        </div>
                    <% } %>

                    <% for(task of medium_tasks){ %>
                        <div class="tr">
                            <div class="th-task td medium-task"><p><%= task.task %></p></div>
                            <div class="th-priority td medium-task"><p><%= task.priority %></p></div>
                            <div class="th-status td medium-task"><p><%= task.status %></p></div>
                        </div>
                    <% } %>

                    <% for(task of low_tasks){ %>
                        <div class="tr">
                            <div class="th-task td low-task"><p><%= task.task %></p></div>
                            <div class="th-priority td low-task"><p><%= task.priority %></p></div>
                            <div class="th-status td low-task"><p><%= task.status %></p></div>
                        </div>
                    <% } %>
                </div>
            </div>
            <div class="task-options">
                <form action="/week-due/<%= id %>" method="get">
                    <button class="btn week-due"><h2>Due this week</h2></button>
                </form>
                <form action="/overdue/<%= id %>" method="get">
                    <button class="btn over-due"><h2>Overdue tasks</h2></button>
                </form>
                <form method="get" action="/tasks/new/<%= id %>">
                    <button class="btn add-task"><h2>Add Task</h2></button>
                </form>
            </div>
        </div>
    </div>
</body>
<script>
    window.onload = function () {
    let task = document.querySelector(".th-task");
    let priority = document.querySelector(".th-priority");
    let status = document.querySelector(".th-status");

    priority.style.height = task.offsetHeight + "px";
    status.style.height = task.offsetHeight + "px";
    };

</script>
</html>